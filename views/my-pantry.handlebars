<!-- template for the myPantry page -->
<section class="flex flex-col justify-center items-center">
    <nav class="bg-slate-800 w-screen py-2 flex h-24 items-start">
        <a class="ml-4 p-2 font-bold rounded bg-emerald-400" href="/">Log Out</a>
        <p class="ml-4 p-2 italic text-gray-50">Logged in as {{user.username}}</p>
    </nav>
    <h2 id="pantry-title" class="font-bold text-5xl mb-10 mt-4 mx-auto text-center">{{user.username}}'s Pantry</h2>

    <!-- new food and delete food buttons -->

    <div id="pantry-buttons"
        class="pantry-buttons shadow-xl flex flex-col sm:flex-row items-center justify-center sm:justify-between bg-slate-800 rounded-lg w-3/4 p-4">
        <div id="new-food-div" class="flex flex-col sm:flex-row items-center">
            <button id="addFoodBtn" type="submit"
                class="btn font-bold bg-emerald-400 rounded p-3 mb-4 sm:mb-0 mx-0 sm:ml-6 md:ml-12">New Food</button>
        </div>
        <button id="deleteFoodBtn" type="submit"
            class="btn font-bold bg-slate-200 text-slate-400 rounded p-3 mx-0 sm:mr-6 md:mr-12">Delete Foods</button>
    </div>

    <!-- list of foods currently in pantry -->
    {{#if foods}}
    <div class="mt-12 w-3/4">
        <div id="pantry-foods-header" class="w-full py-3 flex justify-between items-center sm:px-12">
            <p class="text-lg font-bold underline decoration-solid decoration-blue-700 decoration-2">Foods Currently In
                Pantry</p>
            <p class="text-lg font-bold underline decoration-solid decoration-blue-700 decoration-2">Remove</p>
        </div>
        <ul id="foods-list">
            {{#each foods as |food|}}
            <li class="food-li flex justify-between items-center py-4 my-4 bg-slate-100 rounded shadow-lg">
                {{> foods food}}
            </li>
            {{/each}}
        </ul>
    </div>
    {{/if}}

</section>

<script src="/javascript/pantry.js"></script>