<!-- first page of site, holds title, description, and login -->
<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>My Pantry</title>
  <!-- adding link to sylesheet -->
  <link rel="stylesheet" href="/stylesheets/style.css">
</head>

<body>
    <div class="wrapper">
        <!-- title of site --> 
        <header>
            <h1>
                <a href="/">My Pantry</a>
            </h1>
            <!-- navigation bar to scroll to login/signup in page -->
            <nav>
                <a href="#login-form">Login</a>
                <a href="#signup-form">Sign Up</a>
            </nav>
        </header>

        <section id="site-description">
            <p>
                Welcome to our site! Here you will be able to enter foods from your pantry to see what is available to you on the go! Stick around for future implementations of a shopping list and recipies created from your ingredients!
            </p>
        </section>

        <section id="login-form">
            <!-- holds the form for login using partials -->
            <p>The login form</p>
            <form class="login-form">
                <div>
                    <label for="email-login">email:</label>
                    <input type="text" id="email-login" />
                </div>
                <div>
                    <label for="password-login">password:</label>
                    <input type="password" id="password-login" />
                </div>
                <div>
                    <button type="submit">login</button>
                </div>
            </form>
        </section>

        <section id="signup-form">
            <!-- holds the form for sign up using partials -->
            <p>The sign up form</p>
            <form class="signup-form">
                <div>
                    <label for="username-signup">username:</label>
                    <input type="text" id="username-signup" />
                </div>
                <div>
                    <label for="email-signup">email:</label>
                    <input type="text" id="email-signup" />
                </div>
                <div>
                    <label for="password-signup">password:</label>
                    <input type="password" id="password-signup" />
                </div>
                <div>
                    <button type="submit">signup</button>
                </div>
            </form>
        </section>
    </div>

    <!-- add javascript link for event handlers etc. -->
    <script src="/javascript/homejava.js"></script>
</body>

</html>